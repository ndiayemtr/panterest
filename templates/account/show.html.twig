{% extends 'layouts/base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <H1 class="my-5">Profile</H1>

            <img src="{{ app.user.gravatar() }}" alt="{{ app.user.fullName }} 's Avatar" class="shadow rounded-circle">

            <p class="mt-5 lead">{{ app.user.email }}</p>

            <p>
                <small>Account created  on {{ app.user.createdAt | date('d/m/Y')}}</small>
            </p>

            <h2><p>{{ app.user.fullName }}</p></h2>

            <p>
                <a href="{{ path('app_account_edit') }}">Edit Account</a> | 
                <a href="">Change Password</a>
            </p>
            
        </div>
    </div>
   
{% endblock %}
