{% extends 'base.html.twig' %}

{% block title %}{{ pin.title }}{% endblock %}

{% block body %}
    
    <article>
            <h1>{{ pin.title }}</h1>
            <p>{{ pin.description }}</p>
    </article>

    <a href="{{ path('app_pin_edit', {'id': pin.id}) }}">Edit</a> |
    <a href="{{ path('app_home') }}">Go Back</a> |
    <a href="{{ path('app_pin_delete', {'id': pin.id}) }}" onclick="confirm('Voulez vous faire cette action?');" >Delete</a>

{% endblock %}
